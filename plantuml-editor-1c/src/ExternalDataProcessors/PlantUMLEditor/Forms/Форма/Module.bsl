	КонецЕсли;

	ИменаФайлов = Новый Массив();
	ИменаФайлов.Добавить(ИмяПутиКФайлуНастроек);
	ЗавершениеВыбораКаталогаСохранения(ИменаФайлов);

КонецПроцедуры // СохранитьНастройки()

