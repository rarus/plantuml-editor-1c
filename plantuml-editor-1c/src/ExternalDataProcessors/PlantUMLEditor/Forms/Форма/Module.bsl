	ИмяТаблицыСвойств = ИмяНабораСвойствПоТипуОбъекта(ТипЭлемента);
	НоваяСтрокаЭлемента = Новый Структура("Наименование,ПриемникСвязи");
	НоваяСтрокаЭлемента.Вставить("Тип", ТипЭлемента);
